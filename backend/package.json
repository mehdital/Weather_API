{
    "name": "weather-api",
    "version": "1.0.0",
    "description": "API REST météo (Express) + Swagger + Jest",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon server.js",
        "start": "node server.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "lru-cache": "^11.1.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.1.10"
    },
    "engines": {
        "node": ">=18"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "coverageThreshold": {
            "global": {
                "lines": 80,
                "statements": 80
            }
        }
    }
}
